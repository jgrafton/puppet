# bash_profile

# set prompt
#export PS1="[\u@\h \W]\$ "
export PS1="\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\] \[\033[01;34m\]\w \$\[\033[00m\] "

# aliases
alias ls='ls --color'

# set environment variables
export EDITOR=vi
export PAGER=less

# set key bindings to vi on the command line
set -o vi

export PATH=/opt/local/gnu/bin:/opt/local/bin:$PATH
